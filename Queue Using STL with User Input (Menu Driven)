#include <iostream>
#include <queue>
using namespace std;

int main() {
    queue<int> q;
    int choice, value;

    do {
        cout << "\n1. Enqueue";
        cout << "\n2. Dequeue";
        cout << "\n3. Display";
        cout << "\n4. Exit";
        cout << "\nEnter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Enter value: ";
                cin >> value;
                q.push(value);
                cout << "Inserted successfully\n";
                break;

            case 2:
                if (q.empty()) {
                    cout << "Queue is empty\n";
                } else {
                    cout << "Deleted: " << q.front() << endl;
                    q.pop();
                }
                break;

            case 3:
                if (q.empty()) {
                    cout << "Queue is empty\n";
                } else {
                    queue<int> temp = q;   // copy queue
                    cout << "Queue elements: ";
                    while (!temp.empty()) {
                        cout << temp.front() << " ";
                        temp.pop();
                    }
                    cout << endl;
                }
                break;

            case 4:
                cout << "Exiting program\n";
                break;

            default:
                cout << "Invalid choice\n";
        }
    } while (choice != 4);

    return 0;
}
