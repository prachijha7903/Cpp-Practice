#include <iostream>
using namespace std;

// Function to search an element

int searchElement(int arr[], int n, int key) {
    for(int i = 0; i < n; i++) {
        if(arr[i] == key) {
            return i;  
        }
    }
    return -1; 
}

int main() {
    int n, key;

  cout << "Enter number of elements: ";
    cin >> n;

  int arr[n];

  cout << "Enter " << n << " elements:\n";
    for(int i = 0; i < n; i++) {
        cin >> arr[i];
    }

  cout << "Enter element to search: ";
    cin >> key;

   int result = searchElement(arr, n, key);

   if(result != -1) {
        cout << key << " found at index " << result;
    } else {
        cout << key << " not found in the array";
    }

  return 0;
}
