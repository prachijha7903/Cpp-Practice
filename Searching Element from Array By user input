#include <iostream>
using namespace std;

int main() {
    int n, key;
    
  cout << "Enter number of elements: ";
    cin >> n;

  int arr[n];

  cout << "Enter " << n << " elements:\n";
    for(int i = 0; i < n; i++) {
        cin >> arr[i];
    }

  cout << "Enter number to search: ";
    cin >> key;

  bool found = false;

  for(int i = 0; i < n; i++) {
        if(arr[i] == key) {
            cout << key << " found at index " << i;
            found = true;
            break;
        }
    }

  if(!found) {
        cout << key << " not found in the array";
    }
return 0;
}
