#include <iostream>
using namespace std;

// Binary Search Function
int binarySearch(int arr[], int n, int key) {
    int low = 0;
    int high = n - 1;

    while (low <= high) {
        int mid = (low + high) / 2;

        if (arr[mid] == key)
            return mid;

        else if (arr[mid] < key)
            low = mid + 1;

        else
            high = mid - 1;
    }

    return -1;  // Not found
}

int main() {
    int arr[] = {2, 4, 6, 8, 10};  // Sorted array
    int n = 5;
    int key = 8;

    int result = binarySearch(arr, n, key);

    if (result != -1)
        cout << "Element " << key << " found at index " << result;
    else
        cout << "Element not found";

    return 0;
}
