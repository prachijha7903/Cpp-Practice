#include<iostream>
using namespace std ;

class Avg{
    public:
    void Average(int a,int b){
        int avg = (a+b)/2;
        cout<<"The average is : "<<avg<<endl;
    }
    void Average(float a, float b,float c){
        int avg = (a+b+c)/3;
        cout<<"The average is : "<<avg;
    }
};
int main(){
    Avg A1,A2;
    A1.Average(4,6);
    A2.Average(1.5,7.5,2.9);
}
