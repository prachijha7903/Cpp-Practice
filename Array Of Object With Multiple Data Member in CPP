#include <iostream>
using namespace std;

class Student {
public:
    string name;
    int roll;
    int marks;

  // Function to input data
    void input() {
        cout << "Enter Name: ";
        cin >> name;
        cout << "Enter Roll Number: ";
        cin >> roll;
        cout << "Enter Marks: ";
        cin >> marks;
    }

  // Function to display data
    void display() {
        cout << "Name: " << name 
             << ", Roll: " << roll 
             << ", Marks: " << marks << endl;
    }
};

int main() {
    Student s[3];  // Array of 3 Student objects

  cout << "--- Enter Details of Students ---" << endl;
    for (int i = 0; i < 3; i++) {
        cout << "\nStudent " << i + 1 << " details:\n";
        s[i].input();
    }

  cout << "\n--- Displaying Student Details ---" << endl;
    for (int i = 0; i < 3; i++) {
        s[i].display();
    }
 return 0;
}
