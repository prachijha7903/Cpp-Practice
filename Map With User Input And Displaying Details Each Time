#include <iostream>
#include <map>
using namespace std;

// Function to display one student
void display(int roll, string name) {
    cout << "\nDisplaying Student Details:\n";
    cout << "Roll Number: " << roll << endl;
    cout << "Name: " << name << endl;
}

int main() {
    map<int, string> student;
    int n;

    cout << "Enter number of students: ";
    cin >> n;

    for (int i = 0; i < n; i++) {
        int roll;
        string name;

        cout << "\nEnter roll number: ";
        cin >> roll;
        cout << "Enter name: ";
        cin >> name;

        // Store in map
        student[roll] = name;

        // Display immediately after input
        display(roll, name);
    }

    return 0;
}
