#include <iostream>
using namespace std;

class Student {
    string name;
    int roll;
    float marks;

public:
    // Parameterized Constructor
    Student(string n, int r, float m) {
        name = n;
        roll = r;
        marks = m;
    }

  // Function to display values
    void display() {
        cout << "Name: " << name
             << ", Roll: " << roll
             << ", Marks: " << marks << endl;
    }
};

int main() {
    // Array of objects using constructor
    Student s[3] = {
        Student("Ram", 101, 89.5),
        Student("Shyam", 102, 76.0),
        Student("Radha", 103, 92.3)
    };

  cout << "--- Student Details ---" << endl;
    for (int i = 0; i < 3; i++) {
        s[i].display();
    }

  return 0;
}
